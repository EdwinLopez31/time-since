{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "lib": ["es5", "es6", "dom"],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": "./src",
    "paths": {
      "@icons/*": ["icons/*"],
      "@components/*": ["components/*"],
      "@features/*": ["features/*"],
      "@types/*": ["types/*"],
      "@layouts/*": ["layouts/*"],
      "@utils/*": ["utils/*"]
    },
    "types": ["jest", "@testing-library/jest-dom"]
  },
  "include": ["**/*.ts", "**/*.tsx", "./src/**/*"],
  "exclude": ["node_modules"]
}
